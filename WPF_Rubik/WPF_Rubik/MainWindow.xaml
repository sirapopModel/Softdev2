<Window x:Class="WPF_Rubik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Rubik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="5*" />
            <ColumnDefinition Width="1*" />
            

        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Padding="40">
            <Canvas Name="my_Canvas" HorizontalAlignment="Center" >


            </Canvas>
        </Border>
        <Border Grid.Column="1" Padding="100"></Border>
        <StackPanel Grid.Column="1">
            <Border Padding="20"/>
            
            <Button Name="Play_button" Content="Play" Width="100" Height="30" Margin="3,3,3,3" TextElement.FontSize="20" TextElement.FontWeight="Bold" Background="GreenYellow" Click="Play_Pressed" />
            
            </StackPanel>
        
        
        

    </Grid>
</Window>
